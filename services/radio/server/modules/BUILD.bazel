# We include this rule here to get Bazel to generate the shared library in the expected location on
# the filesystem. Note that SoapySDR has a mechanism to load an individual module by path --
# SoapySDR::loadModule(string). We should consider using that in the future.
cc_binary(
    name = "dummy_radio",
    linkshared = True,
    linkstatic = False,
    visibility = ["//visibility:public"],
    deps = [
        "//radio:dummy_radio_module_library",
    ],
)
