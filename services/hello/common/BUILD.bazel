load("@rules_cc//cc:defs.bzl", "cc_library", "cc_proto_library")
load("@rules_proto//proto:defs.bzl", "proto_library")
load("@com_github_grpc_grpc//bazel:cc_grpc_library.bzl", "cc_grpc_library")
load("@io_bazel_rules_closure//closure:defs.bzl", "closure_js_library", "closure_proto_library")

cc_library(
    name = "common",
    srcs = ["hello_service_location.cc"],
    hdrs = ["hello_service_location.h"],
    visibility = ["//visibility:public"],
    deps = [
        ":hello_cc_grpc",
        ":hello_cc_proto",
        "//services/configuration",
        "//third_party/gflags",
    ],
)

proto_library(
    name = "hello_proto",
    srcs = ["hello.proto"],
    visibility = ["//visibility:public"],
)

cc_proto_library(
    name = "hello_cc_proto",
    deps = [":hello_proto"],
)

cc_grpc_library(
    name = "hello_cc_grpc",
    srcs = [":hello_proto"],
    grpc_only = True,
    deps = [":hello_cc_proto"],
)

closure_proto_library(
    name = "hello_closure_proto",
    deps = [":hello_proto"],
)

closure_js_library(
    name = "hello_pb_js",
    srcs = ["hello_pb.js"],
    visibility = ["//visibility:public"],
    deps = [
        ":hello_closure_proto",
    ],
)
